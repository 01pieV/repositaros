# mÃ¡ aspon jedno cislo
# najmenej jedno velke a jedno mae pismeno
# ci je to ascii

def checkio(heslo):
    if len(heslo) >= 10:
        status = False
        for i in heslo:
            if i.isdigit():
                status = True
        if status:
            status1 = False
            for i in heslo:
                if i.isupper():
                    status1 = True
            if status1:
                status2 = False
                for i in heslo:
                    if i.islower():
                        status2 = True
                if status2:
                    status3 = True
                    for i in heslo:
                        if not(i.isascii()):
                            status3 = False
                    if status3:
                        return True
                    else:
                        return False
                else:
                    return False
            else:
                return False
        else:
            return False
    else:
        return False

assert checkio("ahAudwjd8s4") == True
